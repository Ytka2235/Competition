<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/width_img"
        android:layout_height="@dimen/height_img"
        android:layout_marginStart="130dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="153dp"
        android:src="@drawable/sosiska"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/txt_testo"
        android:textSize="@dimen/size_txt_btn_testo"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:layout_width="@dimen/btn_width_testo"
        android:layout_height="@dimen/btn_height_testo"
        android:layout_marginTop="56dp"
        android:backgroundTint="@color/purple_200"
        android:text="@string/text_in_btn"
        android:textColor="@color/white"
        android:textSize="@dimen/txt_size_btn_testo"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/width_img_testo"
        android:layout_height="@dimen/height_img_testo"
        android:layout_marginStart="153dp"
        android:layout_marginTop="52dp"
        android:src="@drawable/testo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/name_first_cmd"
        android:textSize="@dimen/txt_size_sousages"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:ignore="HardcodedText" />

    <Button
        android:layout_width="@dimen/width_btn"
        android:layout_height="@dimen/heigth_btn"
        android:layout_marginTop="56dp"
        android:backgroundTint="@color/purple_200"
        android:text="@string/txt_btn_sousage"
        android:textColor="@color/white"
        android:textSize="@dimen/size_txt_btn_sousage"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.928"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:ignore="SmallSp" />

</androidx.constraintlayout.widget.ConstraintLayout>


